<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ListeActivity">

    <ImageView
        android:id="@+id/imageKapak"
        android:layout_width="match_parent"
        android:layout_height="@dimen/splash_logo_layout_height"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/creedbanner" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvOyunlar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/liste_rcvOyunlar_layout_height"
        android:background="@drawable/backgroundimage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageKapak"
        tools:listitem="@layout/cardview_oyun" />
</androidx.constraintlayout.widget.ConstraintLayout>