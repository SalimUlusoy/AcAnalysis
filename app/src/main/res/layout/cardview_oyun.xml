<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/cardview_layout_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgOyunLogo"
                android:layout_width="@dimen/cardview_imgOyunLogo_layout_width"
                android:layout_height="@dimen/cardview_imgOyunLogo_layout_height"
                android:layout_marginStart="@dimen/cardview_imgOyunLogo_marginStart"
                android:layout_marginTop="@dimen/cardview_imgOyunLogo_marginTop"
                android:layout_marginBottom="@dimen/cardview_imgOyunLogo_marginBottom"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/txtOyunAdi"
                android:layout_width="@dimen/cardview_txtOyunAdi_layout_width"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/cardview_txtOyunAdi_marginStart"
                android:layout_marginEnd="@dimen/cardview_txtOyunAdi_marginEnd"
                android:textColor="@color/cv_text_color"
                android:textSize="@dimen/cardview_txtOyunAdi_textSize"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imgOyunLogo"
                app:layout_constraintTop_toTopOf="@+id/imgOyunLogo"
                tools:text="@string/cardview_txtOyunAdi" />

            <TextView
                android:id="@+id/txtOyunTarih"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/cardview_txtOyunTarih_marginTop"
                android:textColor="@color/cv_text_color"
                android:textSize="@dimen/cardview_txtOyunTarih_textSize"
                app:layout_constraintStart_toStartOf="@+id/txtOyunAdi"
                app:layout_constraintTop_toBottomOf="@+id/txtOyunAdi"
                tools:text="@string/cardview_txtOyunTarih" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>